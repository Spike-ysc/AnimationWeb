<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Theme</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
     * {
            margin: 0px;
            padding: 0px;
        }

        body {
            margin: 0px;
            padding: 0px;

            font: 13px/27px Roboto, RobotoDraft, Arial, sans-serif;
        }
        #head-theme-div {
            background: white;
            border-radius: 0px;
            box-shadow: 0 3px 9px 0 rgba(0, 0, 0, 0.10), 0 0 0 1px rgba(0, 0, 0, 0.04);
        }
        .theme-title{
            position: absolute;
            top: 30%;
            width: 100%;
            color: white;

            padding:0 10%;

        }
        .theme-title-bg{
            position: absolute;
            top: 0px;
            width: 100%;
            height: 100%;
            color: white;
            background: black;
            opacity: 0.3;

        }

        .theme-title p{
            margin-bottom: 12px;
            color: #fff;
            font-size: 32px;
            font-weight: 300;
            line-height: 1.1em;
            overflow: hidden;
            text-overflow: ellipsis;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 3;
            display: -webkit-box;
            max-height: 3.3em;
        }

        @@keyframes more {
            from {
                opacity: 0.3
            }
            to {
                opacity: 0.7
            }
        }

        @@keyframes lettle {
            from {
                opacity: 0.7
            }
            to {
                opacity: 0.3
            }
        }

        .to-big {
            animation: more 0.5s;
            animation-fill-mode: forwards;
        }

        .to-small {
            animation: lettle 0.5s;
            animation-fill-mode: forwards;
        }
        .theme-div{
              overflow: hidden;
        }
        .theme-height-505{
            height:505px;
            margin: 0 0 5px 0;
            padding: 0;

        }

        .theme-height-250{
            height:250px;
            margin: 0 0 5px 0;
            padding: 0;
        }
        .border-right-5{
            border-right: 5px solid transparent;
        }
    </style>
    <script>
        $(document).ready(function(){
            $(".theme-div").mouseenter(function () {
                $(this).children(".theme-title-bg").removeClass("to-small")
                    .addClass("to-big");

            });
            $(".theme-div").mouseleave(function () {
                $(this).children(".theme-title-bg").removeClass("to-big")
                    .addClass("to-small");


            });
        });

    </script>
</head>
<body>
    
        @RenderBody()


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>