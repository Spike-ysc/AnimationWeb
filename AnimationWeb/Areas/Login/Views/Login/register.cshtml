<div class="login-div">
    <!-- <img class="login-img" src="bd.gif" alt=""> -->
    <div class="form-div">
        <h1 class="login-h1">注册</h1>
        <p>现在就加入我们</p>
        <div class="user-div">
            <div class="input-div ">

                <form action="registerUP" method="post" class="form-inline" style="width:100%;">
                    <div style="margin:40px 0;" class="main-div">
                        <input type="text" style="width:95%;" class="form-control" name="name" id="name" placeholder="用户名">

                        <input type="text" style="width:95%;" class="form-control" name="phone" id="phone" placeholder="手机号">

                        <input type="password" style="width:95%;" class="form-control" name="password" placeholder="请输入密码" id="password">

                        <div class="checkbox" style="width:100%; float:left;">
                            <label>
                                <input style="width:20px;" id="agree-input" type="checkbox" checked value="">
                                同意服务条款与隐私政策，包括 Cookie 使用条款。
                            </label>
                        </div>

                    </div>
                    <button id="register-up" type="submit" class="submit-div">注册</button>
                    <p class="text-center" style="color:red; padding:10px;">@ViewBag.registerMsg</p>

                </form>
            </div>
        </div>

    </div>
</div>

<script>
    $("#agree-input").change(function () {
        if (!$("#agree-input").is(':checked')) {
            $("#register-up").attr("disabled", true);

            $("#register-up").css( "background","#6CB2E8");
        } else {
            $("#register-up").attr("disabled", false);

            $("#register-up").css("background","#4285F4");
        }
    });

    
    $("#register-up").click(function () {
        $("form").validate({
            rules: {
                name: {
                    required: true,
                    minlength: 2,
                    maxlength: 16
                },
                phone: {
                    required: true,
                    digits:true,
                    rangelength:[11,11],
                },
                password:{ required:true, minlength:6}
            },
            messages: {

                name: {
                    required:"用户名不能为空",
                    minlength:"用户名至少需要2个字符",
                },
                phone:{
                    required:"手机号不能为空",
                    digits:"手机号格式错误",
                    rangelength: "手机号长度错误",
                },
                password: {
                    required:"密码不能为空",
                    minlength: "密码不能小于6个字符",
                }
            }
        });
    });
</script>
